{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/**/*.ts",
      "use": "@vercel/node",
      "config": { "runtime": "nodejs18.x" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/$1.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}